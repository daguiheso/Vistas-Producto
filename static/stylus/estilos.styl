@import "nib"
@import "normalize.styl"
@import "fonts.styl"

gris_claro = #818181
azul_claro = #6ccce3


input
	border-radius: 4px
	

//oocss clases

.left
	float left
.right
	float right
.relative
	position relative
	


.mainMenu
	background #002832
	bottom 0
	top 0
	width 180px
	position fixed
	
.header
	display block	
	.contenedor
		padding 0px 20px
		height 45px
		background white
		box-shadow: rgba(0,0,0,0.3) 0px 2px 2px;
		margin-left 180px
		font-size 20px
		position relative	
		.indigoIcon
			color: #4093a7
			position absolute
			top .1em
			font-size: 1.8em
		.imag
			margin 0
			position absolute
			left 3em
			top .47em
	&-session
		.avatar
			border 2px solid azul_claro
			height 30px
			width 30px
			margin .27em 0
		.round
			border-radius 50%
			overflow hidden
		.username
			color azul_claro
			margin-left .5em
			margin-top 1em	
			font-size .7em
			&:after
				border-left 5px solid transparent
				border-right 5px solid transparent			
				border-top 7px solid azul_claro
				content ""
				display inline-block
				margin-left .4em
				font-size .7em
	&-alerts
		padding .6em
		color azul_claro
		.email-icon
			margin-right .5em
	&-search
		line-height 2.4em
		.search-icon
			position absolute
			right .6em
			top .94em
			color azul_claro
			font-size 1em
			font-size .8em
		.input
			border 1px solid azul_claro
			height 1em
			border-radius 20px
			padding 0 1em 0 2em
			width 9em		

		
.board
	margin-left 180px
