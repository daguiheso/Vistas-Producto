@import "nib"
@import "normalize.styl"
@import "fonts.styl"

gris_claro = #818181
azul_claro = #6ccce3


input
	border-radius: 4px
	

//oocss clases

.left
	float left
.right
	float right
.relative
	position relative
	

.mainMenu
	background #002832
	bottom 0
	top 0
	width 180px
	position fixed
	
.header
	display block
	&-content
		padding 0px 20px
		height 40px
		background white
		border-bottom 1px solid gris_claro
		margin-left 180px
		
	.logo
		position relative
	.indigoIcon
		color: #4093a7
		position absolute
		top .2em
		font-size: 1.8em
	.imag
		margin 0
		position absolute
		left 2.2em
		top .44em
		// display inline-block
		// line-height: 3.4em;
	.avatar
		border 2px solid azul_claro
		height 30px
		width 30px
		margin .2em 0
	.round
		border-radius 50%
		overflow hidden
	.username
		color azul_claro
		margin-left .5em
		margin-top 1.2em	
		font-size .7em
		&:after
			border-left 5px solid transparent
			border-right 5px solid transparent			
			border-top 7px solid azul_claro
			content ""
			display inline-block
			margin-left .4em
			font-size .7em
	.alerts
		padding .8em
		color azul_claro
	.email-icon
		margin-right .5em
	.search
		line-height 2.7em
	.search-icon
		position absolute
		right .6em
		top 1.1em
		color azul_claro
		font-size 1em
		font-size .8em

	.input
		border 1px solid azul_claro
		height 1em
		border-radius 20px
		padding 0 1em 0 2em
		width 9em
		

		
